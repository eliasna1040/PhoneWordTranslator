<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PhoneNumberTranslator.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">
            <Label>Enter a Phoneword</Label>
            <Entry x:Name="Phoneword"></Entry>
            <Button x:Name="BtnTranslate" Text="Translate" Clicked="BtnTranslate_OnClicked" />
            <Button x:Name="BtnCall" Text="Call" Clicked="BtnCall_OnClicked" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
